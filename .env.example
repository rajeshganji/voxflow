# VoxFlow Environment Configuration Template

# =============================================================================
# API KEYS (REPLACE WITH YOUR ACTUAL KEYS)
# =============================================================================

# OpenAI API key for speech recognition and AI responses
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API key for text-to-speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (auto-detected: 3000 for dev, 8080 for prod)
PORT=3000

# Node environment
NODE_ENV=development

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# Stream WebSocket URL for bi-directional audio
STREAM_WS_URL=ws://localhost:3000/ws

# Streaming client WebSocket URL for real-time processing  
STREAMING_WS_URL=ws://localhost:3000/ws

# =============================================================================
# STREAMING CLIENT SETTINGS
# =============================================================================

# Enable streaming client
ENABLE_STREAMING_CLIENT=true

# Audio processing settings
STREAMING_BUFFER_MS=2000        # 2 seconds audio buffer
STREAMING_SILENCE_MS=1000       # 1 second silence detection
MIN_SPEECH_DURATION=1500        # 1.5 seconds minimum speech

# =============================================================================
# LANGUAGE AND VOICE SETTINGS
# =============================================================================

# Default transcription language (en, hi, te, ta, kn, ml, auto)
DEFAULT_TRANSCRIPTION_LANGUAGE=en

# Default TTS voice (alloy, echo, fable, onyx, nova, shimmer)
DEFAULT_TTS_VOICE=alloy

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Stream log directory
STREAM_LOG_DIR=./logs/stream

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Enable echo mode to test without AI
ECHO_MODE=false

# VoxFlow application base URL
VOXFLOW_URL=http://localhost:3000

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env
# 2. Replace 'your_openai_api_key_here' with your actual OpenAI API key
# 3. Replace 'your_elevenlabs_api_key_here' with your actual ElevenLabs API key
# 4. Adjust other settings as needed for your environment
# 5. For production at realway.com:
#    - Set PORT=8080
#    - Set NODE_ENV=production
#    - Update WebSocket URLs to use your domain