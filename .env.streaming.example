# VoxFlow Streaming Client Configuration
# Copy this to your .env file and adjust values as needed

# =============================================================================
# STREAMING CLIENT SETTINGS
# =============================================================================

# Enable streaming client for real-time audio processing
ENABLE_STREAMING_CLIENT=true

# WebSocket URL for streaming server connection
STREAMING_WS_URL=ws://localhost:8080/streaming

# Audio processing settings
STREAMING_BUFFER_MS=2000        # 2 seconds audio buffer
STREAMING_SILENCE_MS=1000       # 1 second silence detection
MIN_SPEECH_DURATION=1500        # 1.5 seconds minimum speech

# =============================================================================
# API KEYS (Required for streaming features)
# =============================================================================

# OpenAI API key for real-time transcription
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API key for TTS playback
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# LANGUAGE AND VOICE SETTINGS
# =============================================================================

# Default transcription language (en, hi, te, ta, kn, ml, auto)
DEFAULT_TRANSCRIPTION_LANGUAGE=en

# Default TTS voice (alloy, echo, fable, onyx, nova, shimmer)
DEFAULT_TTS_VOICE=alloy

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Enable detailed streaming logs
LOG_LEVEL=info

# Stream log directory
STREAM_LOG_DIR=./logs/stream

# =============================================================================
# ECHO MODE (for testing)
# =============================================================================

# Enable echo mode to test without AI (just repeats what user says)
ECHO_MODE=false